<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackWhite"
    tools:context=".AccountActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textToolbarAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Account"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorTextWhite"
        android:textSize="17dp"
        tools:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollearning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/profile"/>

            <Button
                android:id="@+id/profilebutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="82dp"
                android:layout_height="48dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="55dp"
                android:text="@string/profilebtn"
                android:textAllCaps="false"
                android:textSize="17dp"/>

            <ImageView
                android:id="@+id/securityimg"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="83dp"
                android:src="@drawable/security"/>

            <Button
                android:id="@+id/securitybutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="55dp"
                android:text="@string/secirtybtn"
                android:textAllCaps="false"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/helpimg"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="133dp"
                android:src="@drawable/help" />

            <Button
                android:id="@+id/helpbutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="67dp"
                android:layout_height="46dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="55dp"
                android:text="@string/helpbtn"
                android:textAllCaps="false"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/logoutimg"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="183dp"
                android:src="@drawable/logout" />

            <Button
                android:id="@+id/logoutbutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="168dp"
                android:layout_marginLeft="55dp"
                android:text="@string/logoutbtn"
                android:textAllCaps="false"
                android:textSize="17dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
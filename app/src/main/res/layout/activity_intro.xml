<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backwhite"
    tools:context=".IntroActivity">

    <ImageView
        android:id="@+id/logoPPTIK2"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/pptik_academy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        android:contentDescription="TODO" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/textDeskripsi"
        android:layout_width="341dp"
        android:layout_height="92dp"
        android:fontFamily="serif"
        android:text="PPTIK merupakan lembaga yang menyediakan pelatihan online course di bidang TIK dan sertifikasi internasional diantaranya :"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211" />

    <TextView
        android:id="@+id/textDeskripsi2"
        android:layout_width="329dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:text="- Fundamental Information Security (FIS)"
        android:textColor="#F000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi" />

    <TextView
        android:id="@+id/textDeskripsi3"
        android:layout_width="329dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:fontFamily="serif"
        android:text="- Certified Project Manager (CPM)"
        android:textColor="#F000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi2" />

    <TextView
        android:id="@+id/textDeskripsi4"
        android:layout_width="329dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:fontFamily="serif"
        android:text="- Adobe Certified Associate (ACA)"
        android:textColor="#F000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi3" />

    <TextView
        android:id="@+id/textDeskripsi5"
        android:layout_width="329dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:fontFamily="serif"
        android:text="- Dll"
        android:textColor="#F000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi4" />

    <ImageView
        android:id="@+id/iconweb"
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi5" />

    <TextView
        android:id="@+id/textWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="serif"
        android:text="pptik.stiki.ac.id"
        android:textColor="#F000"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/iconweb"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi5" />

    <ImageView
        android:id="@+id/iconemail"
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconweb"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="148dp"
        android:fontFamily="serif"
        android:text="pptik@stiki.ac.id"
        android:textColor="#F000"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconemail"
        app:layout_constraintTop_toBottomOf="@+id/textWeb"
        app:layout_constraintVertical_bias="0.152" />

    <ImageView
        android:id="@+id/iconPhone"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/phone"
        app:layout_constraintStart_toEndOf="@+id/textWeb"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi5" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="serif"
        android:text="(0341) 560823 ext.312"
        android:textColor="#F000"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iconPhone"
        app:layout_constraintTop_toBottomOf="@+id/textDeskripsi5" />

    <ImageView
        android:id="@+id/iconInstagram"
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="244dp"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/iconPhone"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="serif"
        android:text="pptik_stiki"
        android:textColor="#F000"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toEndOf="@+id/iconInstagram"
        app:layout_constraintTop_toBottomOf="@+id/textPhone"
        app:layout_constraintVertical_bias="0.203" />

    <Button
        android:id="@+id/btn_createacc"
        android:layout_width="166dp"
        android:layout_height="44dp"
        android:background="@drawable/outbluebtn"
        android:text="Create an Account"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="112dp"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:text="Sign In"
        android:textColor="@color/colorTextWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902" />

</androidx.constraintlayout.widget.ConstraintLayout>
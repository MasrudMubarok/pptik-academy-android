<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBackWhite"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/relativeImc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/relative0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp"
                android:gravity="top"
                android:visibility="gone"
                tools:ignore="InvalidId">

                <TextView
                    android:id="@+id/kursusMyCoursesId"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="ID"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewIdKursusImc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:text="id"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iconImc"
                android:layout_width="114dp"
                android:layout_height="120dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textViewNamaKursusImc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:text="Nama Kursus"
                    android:textColor="#f000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/modulText"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="22dp"
                    android:text="Modul"
                    android:textColor="#f000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/jumlahModulTextImc"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="22dp"
                    android:layout_toStartOf="@+id/modulText"
                    android:text="0"
                    android:textColor="#f000"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imgModulText"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="187dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="22dp"
                    android:layout_toStartOf="@+id/jumlahModulTextImc"
                    android:src="@drawable/book" />

                <TextView
                    android:id="@+id/videoText"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="22dp"
                    android:layout_toStartOf="@+id/jumlahModulTextImc"
                    android:text="Video"
                    android:textColor="#F000"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/jumlahVideoTextImc"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="22dp"
                    android:layout_toStartOf="@+id/videoText"
                    android:text="0"
                    android:textColor="#f000"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imgVideoText"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="187dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="22dp"
                    android:layout_toStartOf="@+id/jumlahVideoTextImc"
                    android:src="@drawable/play" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>